<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

<CheckBoxPreference
	android:key="play_anims"
	android:title="Play Animations"
	android:defaultValue="true"
	android:summaryOn="Play animations during game."
	android:summaryOff="Skip animations during game."
	/>

<CheckBoxPreference
	android:key="vib_touch"
	android:title="Vibrate on Touch"
	android:defaultValue="true"
	android:summaryOn="Vibrate when an item is selected."
	android:summaryOff="Do not vibrate when an item is selected."
	/>

<CheckBoxPreference
	android:key="vib_seq"
	android:title="Vibrate on Sequence"
	android:defaultValue="true"
	android:summaryOn="Vibrate when a sequence vanishes."
	android:summaryOff="Do not vibrate when a sequence vanishes."
	/>

<ListPreference
    android:key="visual"
    android:title="Visual Theme"
    android:summary="List of available visual themes for sprites"
    android:dialogTitle="Visual Theme"
    android:entries="@array/prefs_theme_names"
    android:entryValues="@array/prefs_theme_values"
    android:defaultValue="default"
    />

</PreferenceScreen>
